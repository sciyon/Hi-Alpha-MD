@model MASM.Models.ViewModels.Appointment.ViewAppointmentViewModel

@{
    ViewData["Title"] = "View Appointment";
}

<div class="row p-4">
    <div class="col-md-4">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <div>
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ClinicName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ClinicName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoctorName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DoctorName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PatientName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PatientName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ReasonForVisit)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReasonForVisit)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AdditionalInfo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AdditionalInfo)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AppointmentDateTime)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AppointmentDateTime)</dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-appointmentId="@Model.Id" class="btn btn-primary">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>