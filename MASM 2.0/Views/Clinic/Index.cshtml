@using MASM.Models.Clinic;
@model List<Clinic>
@{
	ViewData["Title"] = "Clinic Master List";
}

<div class="p-4 rounded-1 bg-white m-3">
	<a asp-action="Create" class="btn btn-primary mb-2 text-white">
		<i class="bi bi-plus-lg me-2"></i>Create Clinic
	</a>

	<!-- Responsive Table -->
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead class="table-primary">
				<tr>
					<th>Name</th>
					<th>Location</th>
					<th>Telephone</th>
					<th>Phone</th>
					<th>Email</th>
					<th>Starting Time</th>
					<th>Closing Time</th>
					<th>Status</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Clinic in Model)
				{
					<tr>
						<td>@Clinic.Name</td>
						<td>@Clinic.Location</td>
						<td>@Clinic.Telephone</td>
						<td>@Clinic.Phone</td>
						<td>@Clinic.Email</td>
						<td>@Clinic.StartingTime</td>
						<td>@Clinic.ClosingTime</td>
						<td>@Clinic.Status</td>
						<td>
							<a asp-action="Edit" asp-route-id="@Clinic.Id" class="btn btn-primary btn-sm">
								<i class="bi bi-pencil"></i> Edit
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
