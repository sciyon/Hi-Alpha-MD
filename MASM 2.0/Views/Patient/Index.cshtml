@model List<Patient> 

<h1>Patients List</h1>

<div class="container">
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Email Address
				</th>
				<th>
					Mobile Number
				</th>
				<th>
					Status
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var patient in Model.OrderBy(u=>u.CreatedAt)){
				<tr>
					<td>
						@patient.Email
					</td>
					<td>
						@patient.MobileNumber
					</td>
					<td>
						@patient.Status
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Patient" asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger mx-2">
								<i class="bi bi-x-lg"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>