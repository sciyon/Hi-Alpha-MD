@model List<PatientUser>

<h1>Patients List</h1>

<table class="table">
	<thead>
		<tr>
			<th>Email</th>
			<th>Mobile Number</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var patient in Model)
		{
			<tr>
				<td>@patient.Email</td>
				<td>@patient.MobileNumber</td>
				<td>@patient.Status</td>
				<td>
					<a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-primary">Edit</a>
				</td>
			</tr>
		} 
	</tbody>
</table>
