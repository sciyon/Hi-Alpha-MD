@{
    var userRole = ViewBag.UserRole as string ?? "Patient"; 
    var firstName = ViewBag.FirstName as string ?? "Firstname";
    var lastName = ViewBag.LastName as string ?? "Lastname";

    var profileImage = userRole.ToLower() switch
    {
        "doctor" => "/img/doctorIcon.png",
        "assistant" => "/img/assistantIcon.png",
        _ => "/img/patientIcon.png"
    };

    var formattedName = $"{lastName} {firstName[0]}.";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hi-Alpha MD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MASM_2._0.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-0 m-0">
        <div class="container-fluid p-0 ">
            <!-- Logo (Matches Sidebar Width) -->
            <div class="bg-white d-flex align-items-center col-md-2 col-lg-2">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="w-100">
                    <img src="~/img/mainLogo.jpg" alt="MASM Logo" class="w-100 d-block" style="max-height: 100px; object-fit: contain;">
                </a>
            </div>

            <!-- Patient Info (Hidden on Tablet and Mobile) -->
            <div class="d-none d-md-flex flex-grow-1 align-items-center justify-content-between ps-3 pe-3">
                <h1 class="h4 mb-0">Dashboard</h1>
                <div class="d-flex align-items-center">
                    <img src="@profileImage" alt="User Icon" style="width: 40px; height: 40px;">
                    <p class="mb-0 ms-2">@formattedName</p>
                </div>
            </div>

            <!-- Sidebar Toggle Button (Visible on Mobile) -->
            <button class="navbar-toggler ms-auto me-3" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Matches Logo Width, Hidden by Default on Mobile) -->
            <nav id="sidebarMenu" class="col-lg-2 collapse d-lg-block bg-light">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Dashboard</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Appointments</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Schedule</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Medicines</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Services</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Staff</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Diagnoses</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Patients</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Billings</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Profile</a></li>
                        <li class="nav-item pb-2"><a class="nav-link bg-primary rounded-3 text-white" href="#">Clinic</a></li>
                        <li class="nav-item pb-2">
                            <form asp-controller="Patient" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link bg-primary rounded-3 text-white w-100 text-start">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 col-lg-10 px-md-4 bg-primary">

                <div class="row">
                    <!-- Dummy Cards -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Appointments</h5>
                                <p class="card-text">You have 3 upcoming appointments.</p>
                                <a href="#" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Prescriptions</h5>
                                <p class="card-text">2 prescriptions need renewal.</p>
                                <a href="#" class="btn btn-primary">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Health Reports</h5>
                                <p class="card-text">Latest blood test available.</p>
                                <a href="#" class="btn btn-primary">Download</a>
                            </div>
                        </div>
                    </div>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2025 My App. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
