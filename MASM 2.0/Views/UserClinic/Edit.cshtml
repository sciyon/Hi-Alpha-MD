@model MASM.Models.UserClinic
@{
    ViewData["Title"] = "Edit UserClinic";
}

<div class="p-4 rounded-1 bg-white m-3">
    <h2>Edit UserClinic</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="ClinicId" />

        <div class="form-group">
            <label asp-for="UserId" class="control-label">User ID</label>
            <input asp-for="UserId" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="ClinicId" class="control-label">Clinic ID</label>
            <input asp-for="ClinicId" class="form-control" readonly />
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>