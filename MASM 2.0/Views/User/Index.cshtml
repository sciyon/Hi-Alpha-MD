@using MASM.Models;
@model List<User>

@{
	ViewData["Title"] = "User Master List";
}
<div class="p-4 rounded-1 bg-white m-3">

	<table class="table table-striped table-hover">
		<thead class="table-primary">
			<tr>
				<th>Email</th>
				<th>Mobile Number</th>
				<th>Status</th>
				<th>Role</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var User in Model)
			{
				<tr>
					<td>@User.Email</td>
					<td>@User.MobileNumber</td>
					<td>@User.Status</td>
					<td>@User.Role</td>
					<td>
						<a asp-action="Edit" asp-route-id="@User.Id" class="btn btn-primary">Edit</a>
					</td>
				</tr>
			} 
		</tbody>
	</table>
</div>
